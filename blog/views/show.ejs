<% include partials/header.ejs %>
<div class='ui main text container segment'>
    <div class='ui huge header'><%= blog.title %></div>
    <div class='ui top attached '>
        <div class='item'><img class='ui centered rounded image' src='<%= blog.image %>'></div>
        <div class='content'><span><%= blog.date.toDateString() %></span></div>
        <div class='description'><p><%= blog.body %></p></div>
        <a href='/blogs/<%=blog._id %>/edit' class='ui basic orange button'>Edit</a>
        <form id='delete' action='/blogs/<%= blog._id %>?_method=DELETE' method='post'>
            <button class='ui red basic button'>Delete</button>
        </form>

    </div>
    
</div>

<% include partials/footer.ejs %>